{
  "name": "snake-game-3d",
  "version": "1.0.0",
  "description": "A modern 3D Snake game built with TypeScript, Node.js, and Three.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,css,html}\""
  },
  "dependencies": {
    "three": "^0.158.0"
  },
  "devDependencies": {
    "@types/three": "^0.158.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "keywords": [
    "game",
    "snake",
    "typescript",
    "three.js",
    "3d"
  ],
  "author": "Snake Game Team",
  "license": "MIT"
}